run="npm run dev"
entrypoint="src/App.jsx"
modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-21_11"

[env]
XDG_CONFIG_HOME = "/home/runner/.config"

[packager]
language = "nodejs"

  [packager.features]
  packageSearch = true
  guessImports = true
  enabledForHosting = false

[unitTest]
language = "nodejs"

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"

  [languages.javascript.languageServer]
  start = [ "typescript-language-server", "--stdio" ]

[agent]
expertMode = true
integrations = ["javascript_gemini:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Game Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Game Server"

[[workflows.workflow]]
name = "Game Dev Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bun run vite"
waitForPort = 5000

[[workflows.workflow]]
name = "Game Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bun run server/index.ts"
waitForPort = 3001

[[ports]]
localPort = 3001
externalPort = 3001

